# end-of-line normalization
* text=auto

## normalize EOL and use native line endings on checkout
*.nix text
*.txt text
.editorconfig text
.gitattributes text
.gitignore text
.reuse/dep5 text
flake.lock text

# linguist
*.lock linguist-generated=true

# creating an archive
/*.txt export-ignore
/.editorconfig export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/.reuse/dep5 export-ignore
