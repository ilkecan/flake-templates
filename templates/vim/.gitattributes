# end-of-line normalization
* text=auto

## normalize EOL and use native line endings on checkout
*.md text
*.vim text
*.txt text
.editorconfig text
.gitattributes text
.reuse/dep5 text

# diff
*.md diff=markdown

# creating an archive
*.md export-ignore
*.txt export-ignore
.editorconfig export-ignore
.gitattributes export-ignore
.reuse/dep5 export-ignore
